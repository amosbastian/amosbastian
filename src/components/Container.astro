---
type Props = {
  class?: string;
};

const { class: className } = Astro.props;
---

<div class:list={["sm:px-8 prose dark:prose-invert", className]}>
  <div class="mx-auto w-full max-w-3xl lg:px-8">
    <div class="relative px-4 sm:px-8 lg:px-12" , class)}>
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <slot />
      </div>
    </div>
  </div>
</div>
